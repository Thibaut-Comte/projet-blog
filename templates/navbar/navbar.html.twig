{% set currentRoute = app.request.attributes.get("_route") %}
<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_product_index') }}">Price Maximise</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item {{ 'app_categorie_index' == currentRoute ? 'active' }}">
                        <a href="{{ path('app_categorie_index') }}" class="nav-link">Categories</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link {{ 'app_product_index' == currentRoute ? 'active' }}" href="{{ path('app_product_index') }}" >Produits</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ 'app_contact_index' == currentRoute ? 'active' }}" href="{{ path('app_contact_index') }}">Contact</a>
                </li>
                <li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a  class="nav-link" href="{{ path('app_security_account', {'id': app.user.id}) }}">Mon Compte</a>
                    {% else %}
                        <a class="nav-link {{ 'app_security_signup' == currentRoute ? 'active' }}" href="{{ path('app_security_signup') }}">S'inscrire</a>
                    {% endif %}
                </li>
                <li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a class="nav-link" href="{{ path('app_logout') }}">Se d√©connecter</a>
                    {% else %}
                        <a class="nav-link" href="{{ path('app_security_login') }}">Se connecter</a>
                    {% endif %}
                </li>
            </ul>
        </div>
    </div>
</nav>