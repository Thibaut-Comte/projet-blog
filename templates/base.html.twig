<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="index du blog">
    <meta name="author" content="webmaster">

    <title>{% block title %}Price Maximise{% endblock %}</title>

    {% block stylesheets %}

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

        <!-- Bootstrap core CSS -->
        <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Custom styles for this template -->
        <link href="{{ asset('assets/css/blog-home.css') }}" rel="stylesheet">
    {% endblock %}



</head>

<body>

{% include('navbar/navbar.html.twig') %}

{% for type,message in app.flashes %}

    {% for message in message %}

        <div class="alert alert-{{ type }}" role="alert">
            {{ message }}
        </div>

    {% endfor %}

{% endfor %}

{% block body %}
{% endblock %}


<!-- Footer -->
<footer class="py-5 bg-dark">
    <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Prise Maximise 2018</p>
    </div>
    <!-- /.container -->
</footer>


{% block javascripts %}
    <!-- Bootstrap core JavaScript -->
    <script src="{{ asset('assets/js/jquery.min.js')}}"></script>
    <script src="{{ asset('assets/js/bootstrap.bundle.min.js')}}"></script>
{% endblock %}


</body>

</html>

